{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"]
    },
    "outDir": "./build/",
    "noImplicitAny": true,
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "types": ["node"]
  },
  "include": ["src"]
}
